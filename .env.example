# Email Configuration (for notifications)
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-specific-password
RECEIVER_EMAIL=receiver-email@gmail.com

# SMTP Server Settings (Gmail by default)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Scraping Settings
SCRAPE_KEYWORDS=Python 개발자,데이터 엔지니어,백엔드 개발자
PAGES_PER_SITE=3
HEADLESS_MODE=true

# Database
DB_PATH=jobs.db

# Scheduling (optional - for cron jobs)
SCRAPE_SCHEDULE=0 9 * * *  # Daily at 9 AM

# Notification Settings
SEND_EMAIL_ALERTS=true
SEND_DAILY_SUMMARY=true
MIN_JOBS_FOR_ALERT=5

# Note: For Gmail, you need to:
# 1. Enable 2-factor authentication
# 2. Generate an "App Password" from your Google Account settings
# 3. Use the app password as SENDER_PASSWORD (not your regular password)
